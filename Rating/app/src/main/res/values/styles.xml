<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Icon" parent="@android:style/Theme">
        <!--<item name="cornerRadius">2dp</item>-->
    </style>

    <style name="Icon.Small" parent="Icon">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
    </style>

    <style name="Icon.Big" parent="Icon">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="Icon.Middle" parent="Icon">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/divider_small</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>

    <style name="top_bar_title_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/color_33</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">48dip</item>
        <item name="android:layout_marginRight">48dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/text_large_size_20</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="top_bar_btn_comm_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/top_bar_right_btn_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_content_size_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="list_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/list_item_selector</item>
    </style>

    <style name="list_item_icon_style">
        <item name="android:layout_width">@dimen/icon</item>
        <item name="android:layout_height">@dimen/icon</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>

    <style name="list_item_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="list_item_icon_style.avatar" parent="list_item_icon_style">
        <item name="android:id">@id/iv_icon</item>
        <item name="android:contentDescription">@string/avatar</item>
    </style>

    <style name="list_item_title_style.title" parent="list_item_title_style">
        <item name="android:id">@id/tv_title</item>
        <item name="android:textSize">@dimen/text_title_size_16</item>
        <item name="android:textColor">@color/text_color_33</item>
    </style>

    <style name="list_item_title_style.content" parent="list_item_title_style">
        <item name="android:id">@id/tv_content</item>
        <item name="android:layout_marginTop">@dimen/space_between_content_areas</item>
        <item name="android:textSize">@dimen/text_content_size_14</item>
        <item name="android:textColor">@color/text_color_66</item>
    </style>

    <style name="list_view_style">
        <item name="android:id">@id/lv_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>
</resources>
